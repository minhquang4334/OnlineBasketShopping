<div class="container">
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
      <div class="card-body">
        <h5 class="card-title text-center">Sign up</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-label-group my-1">
            <label for="inputEmail"><i class="far fa-envelope"></i> Email address</label>
            <%= f.email_field :email, autofocus: true,
              class: "form-control", placeholder: "Email address" %>
          </div>

          <div class="form-label-group my-1">
            <label for="inputPassword"><i class="fas fa-lock"></i> Password</label>
            <%= f.password_field :password,
              class: "form-control", placeholder: "Password" %>
          </div>

          <div class="form-label-group my-1">
            <label for="inputPassword"><i class="fas fa-lock"></i> Confirm Password</label>
            <%= f.password_field :password_confirmation,
              class: "form-control", placeholder: "Password" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block my-3"%>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
