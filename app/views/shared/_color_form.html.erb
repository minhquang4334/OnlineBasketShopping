<%= form_for @color,:html => {:class => "form-inline"}, remote: true do |f|%>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.text_field :color, placeholder: "New color...",
      class: "form-control", id: "new-color", required: true %>
  </div>
  <div>
    <%= f.submit "Add", class: "btn btn-primary ml-4" %>
  </div>
<% end %>
