<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>List models</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= root_path %>">Dashboard</a></li>
          <li class="breadcrumb-item active">List models</li>
        </ol>
      </div>
      <div class="col-sm-12">
        <%= button_to "Create new model", new_model_path, :method => :get, :class => "btn btn-inline  btn-primary float-right" %>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="card-tools">
              <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                <div class="input-group-append">
                  <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <table class="table table-bordered" id="list-models">
              <thead>                  
                <tr>
                  <th style="width: 10px">#</th>
                  <th>Name</th>

                  <th>Description</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @models.each do |model| %>
                  <tr>
                    <td><%= model.id %></td>
                    <td><%= model.name %></td>
                    <td><%= truncate(model.description, :length => 100) %></td>
                    <td>
                      <%= link_to "Info", model, :class => "btn btn-inline-block btn-outline-info btn-sm" %>
                      <button type="button" class="btn btn-inline-block btn-outline-warning btn-sm">Edit</button>
                      <%= link_to "Delete", model, method: :delete, data: { confirm: "Are you sure" }, :class => "btn btn-inline-block btn-outline-danger btn-sm" %>
                    </td>
                  </tr>
                <% end %>  
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</section>