<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Model's info</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= root_path %>">Create new model</a></li>
          <li class="breadcrumb-item"><%= link_to "List models", models_path %></li>
          <li class="breadcrumb-item active">Model's info</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Model's info</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table class="table table-bordered">
              <thead> 
              </thead>
              <tbody>
                <tr>
                  <th>Name</th>
                  <td><%= @model.name %></td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td><%= @model.description %></td>
                </tr>
                <tr>
                  <th>image</th>
                  <td><%= image_tag @model.image.url, :class => "model-image" if @model.image? %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="card-footer">
            <%= link_to "Back", :back, :class => "btn btn-inline-block btn-outline-info btn-sm" %>
            <%= link_to "Edit", edit_model_path, :id => @model.id ,:class => "btn btn-inline-block btn-outline-warning btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>